<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:Bist_1.Converters;assembly=Bist_1"
             xmlns:system="clr-namespace:System;assembly=netstandard"
             x:Class="Bist_1.App">
    <Application.Resources>
        <ResourceDictionary>
            <converters:EmptyStringToBoolConverter x:Key="emptyStringToBoolConverter"/>
            <converters:AgeClassifierConverter x:Key="ageClassifierConverter"/>

            <!--<Color x:Key="NavigationPrimary">#2196F3</Color>-->
            <Color x:Key="NavigationPrimary">Orange</Color>
            <x:String x:Key="myString">String value &lt; &amp;</x:String>
            <x:Int32 x:Key="myNumber">1024</x:Int32>

            <Style TargetType="{x:Type Label}" x:Key="labelRedStyle">
                <Setter Property="FontSize" Value="20"/>
                <Setter Property="TextColor" Value="Red"/>
                <Setter Property="Opacity" Value="0.5"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>