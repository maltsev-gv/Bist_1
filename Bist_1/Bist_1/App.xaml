<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:Bist_1.Converters;assembly=Bist_1"
             x:Class="Bist_1.App">
    <Application.Resources>
        <ResourceDictionary>
            <converters:EmptyStringToBoolConverter x:Key="emptyStringToBoolConverter"/>
            <converters:AgeClassifierConverter x:Key="ageClassifierConverter"/>

            <Style TargetType="{x:Type Label}" x:Key="labelRedStyle">
                <Setter Property="FontSize" Value="20"/>
                <Setter Property="TextColor" Value="Red"/>
                <Setter Property="Opacity" Value="0.5"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>